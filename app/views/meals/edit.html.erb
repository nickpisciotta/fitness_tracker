<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title text-center">Edit Meal: <%= @meal.title %></h3>
      </div>
      <div class="panel-body">

        <%= form_for(@meal) do |f| %>

          <%= f.label :quantity, :class=> "meal-quantity-label"  %>
          <%= f.select :quantity, options_for_select(1..10), :class => 'quantity-select'%></br></br>

          <%= f.label :meal_category_id, :class=> "meal-quantity-label"  %>
          <%= f.select :meal_category_id, options_for_select(meal_categories)%></br></br>

          <%= f.submit "Save Changes", class: "btn btn-primary update-need" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
